= link_to 'new', { action: :new }, class: 'btn btn-primary'

- @posts.each do |item|
  -#.bs-preview-info
  .bs-preview-primary
    %h4= link_to item, item

    %p= truncate item.content.html_safe

    %ul.list-inline
      = link_to 'edit', { action: :edit, id: item }
      = link_to 'destroy', { action: :destroy, id: item }, method: :delete, data: { confirm: 'Sure?' }
